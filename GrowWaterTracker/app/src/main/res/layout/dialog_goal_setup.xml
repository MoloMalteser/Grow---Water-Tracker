<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:padding="24dp"
	android:background="@color/beigeBackground">

	<TextView
		android:id="@+id/textGoalValue"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:text="2000 ml"
		android:textSize="24sp"
		android:textStyle="bold"
		android:textColor="@color/onBeige"
		android:layout_marginBottom="16dp"/>

	<SeekBar
		android:id="@+id/seekBarGoalSetup"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="16dp"
		android:max="3000"
		android:progress="2000"
		android:progressTint="@color/onBeige"
		android:thumbTint="@color/onBeige"/>

	<TextView
		android:id="@+id/textGoalWarning"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text=""
		android:textSize="14sp"
		android:textColor="#FF6B6B"
		android:gravity="center"
		android:visibility="gone"
		android:layout_marginTop="8dp"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginTop="16dp">

		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="1500 ml"
			android:textSize="12sp"
			android:textColor="@color/onBeige"
			android:gravity="start"/>

		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="3000 ml"
			android:textSize="12sp"
			android:textColor="@color/onBeige"
			android:gravity="end"/>
	</LinearLayout>

</LinearLayout>