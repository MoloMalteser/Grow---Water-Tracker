<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/beigeBackground"
	tools:context=".MainActivity">

	<!-- Top Bar with rounded corners and shadow -->
	<androidx.cardview.widget.CardView
		android:id="@+id/topBar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="16dp"
		app:cardCornerRadius="16dp"
		app:cardElevation="4dp"
		app:cardBackgroundColor="@color/onBeige">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:padding="20dp"
			android:gravity="center_vertical">

			<TextView
				android:id="@+id/textTopConsumed"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:textColor="@color/beigeBackground"
				android:textStyle="bold"
				android:textSize="16sp"
				android:text="ðŸ’§ 0 ml" />

			<TextView
				android:id="@+id/textTopStreak"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/beigeBackground"
				android:textStyle="bold"
				android:textSize="16sp"
				android:text="ðŸ”¥ 0" />

			<TextView
				android:id="@+id/textTopGoal"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="12dp"
				android:textColor="@color/beigeBackground"
				android:textStyle="bold"
				android:textSize="16sp"
				android:text="ðŸŽ¯ 2000 ml" />
		</LinearLayout>
	</androidx.cardview.widget.CardView>

	<FrameLayout
		android:id="@+id/contentContainer"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginBottom="80dp"
		android:layout_marginTop="100dp">

		<LinearLayout
			android:id="@+id/homeContainer"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="top|center_horizontal"
			android:orientation="vertical"
			android:padding="16dp">

			<!-- Plant Container with rounded background -->
			<androidx.cardview.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="8dp"
				app:cardCornerRadius="20dp"
				app:cardElevation="8dp"
				app:cardBackgroundColor="@android:color/white">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:padding="16dp">

					<ImageView
						android:id="@+id/imagePlant"
						android:layout_width="match_parent"
						android:layout_height="280dp"
						android:layout_marginTop="8dp"
						android:layout_marginBottom="8dp"
						android:contentDescription="@string/plant_content_desc"
						android:scaleType="fitCenter"
						android:src="@drawable/plant_seedling"
						android:adjustViewBounds="true" />
						
					<TextView
						android:id="@+id/textPlantHeight"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center_horizontal"
						android:textColor="@color/onBeige"
						android:textStyle="bold"
						android:textSize="18sp"
						android:text="@string/plant_height"
						android:layout_marginTop="8dp" />
						
					<TextView
						android:id="@+id/textPlantStatus"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center_horizontal"
						android:textColor="@color/onBeige"
						android:textSize="16sp"
						android:layout_marginTop="8dp"
						tools:text="Pflanze wÃ¤chst! ðŸŒ±" />
				</LinearLayout>
			</androidx.cardview.widget.CardView>
		</LinearLayout>

		<ScrollView
			android:id="@+id/historyContainer"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:visibility="gone">
			
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:padding="16dp">
				
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/history_title"
					android:textColor="@color/onBeige"
					android:textSize="24sp"
					android:textStyle="bold"
					android:layout_gravity="center_horizontal"
					android:layout_marginBottom="24dp"/>
					
				<TextView
					android:id="@+id/textHistoryToday"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="@string/history_today"
					android:textColor="@color/onBeige"
					android:textSize="18sp"
					android:textStyle="bold"
					android:layout_marginBottom="8dp"/>
					
				<TextView
					android:id="@+id/textHistoryYesterday"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="@string/history_yesterday"
					android:textColor="@color/onBeige"
					android:textSize="18sp"
					android:layout_marginBottom="8dp"/>
					
				<TextView
					android:id="@+id/textHistoryWeek"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="@string/history_this_week"
					android:textColor="@color/onBeige"
					android:textSize="18sp"
					android:layout_marginBottom="8dp"/>
			</LinearLayout>
		</ScrollView>

		<ScrollView
			android:id="@+id/scoreboardContainer"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:visibility="gone">
			
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:padding="16dp">
				
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/scoreboard_title"
					android:textColor="@color/onBeige"
					android:textSize="24sp"
					android:textStyle="bold"
					android:layout_gravity="center_horizontal"
					android:layout_marginBottom="24dp"/>
					
				<TextView
					android:id="@+id/textScoreboardPoints"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="@string/scoreboard_points"
					android:textColor="@color/onBeige"
					android:textSize="18sp"
					android:layout_marginBottom="16dp"/>
					
				<TextView
					android:id="@+id/textScoreboardStreak"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="@string/scoreboard_streak"
					android:textColor="@color/onBeige"
					android:textSize="18sp"
					android:layout_marginBottom="16dp"/>
					
				<TextView
					android:id="@+id/textScoreboardBestDay"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="@string/scoreboard_best_day"
					android:textColor="@color/onBeige"
					android:textSize="18sp"
					android:layout_marginBottom="16dp"/>
					
				<TextView
					android:id="@+id/textScoreboardTotal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="@string/scoreboard_total_drunk"
					android:textColor="@color/onBeige"
					android:textSize="18sp"
					android:layout_marginBottom="16dp"/>
			</LinearLayout>
		</ScrollView>

		<ScrollView
			android:id="@+id/settingsContainer"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:visibility="gone">
			
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:padding="16dp">
				
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/settings_title"
					android:textColor="@color/onBeige"
					android:textSize="24sp"
					android:textStyle="bold"
					android:layout_gravity="center_horizontal"
					android:layout_marginBottom="24dp"/>
					
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/daily_goal_setting"
					android:textColor="@color/onBeige"
					android:textSize="16sp"
					android:layout_marginBottom="8dp"/>
					
				<SeekBar
					android:id="@+id/seekBarDailyGoal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="16dp"
					android:max="3000"
					android:progress="2000"/>
					
				<TextView
					android:id="@+id/textDailyGoalValue"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="2000 ml"
					android:textColor="@color/onBeige"
					android:textSize="14sp"
					android:layout_gravity="center_horizontal"
					android:layout_marginBottom="24dp"/>
					
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/notifications_setting"
					android:textColor="@color/onBeige"
					android:textSize="16sp"
					android:layout_marginBottom="8dp"/>
					
				<Switch
					android:id="@+id/switchNotifications"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="16dp"
					android:checked="true"/>
					
				<TextView
					android:id="@+id/textNotificationStatus"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/notifications_enabled"
					android:textColor="@color/onBeige"
					android:textSize="14sp"
					android:layout_gravity="center_horizontal"/>
			</LinearLayout>
		</ScrollView>

	</FrameLayout>

	<!-- Floating Action Button with improved design -->
	<com.google.android.material.floatingactionbutton.FloatingActionButton
		android:id="@+id/fabBucket"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal|bottom"
		android:layout_marginBottom="80dp"
		app:backgroundTint="@color/onBeige"
		app:tint="@color/beigeBackground"
		app:srcCompat="@drawable/ic_bucket"
		app:elevation="8dp"
		app:fabSize="normal" />

	<!-- Bottom Navigation with improved design -->
	<com.google.android.material.bottomnavigation.BottomNavigationView
		android:id="@+id/bottomNav"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom"
		app:menu="@menu/menu_bottom_nav"
		app:itemIconTint="@color/onBeige"
		app:itemTextColor="@color/onBeige"
		android:background="@color/beigeBackground"
		app:elevation="8dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>