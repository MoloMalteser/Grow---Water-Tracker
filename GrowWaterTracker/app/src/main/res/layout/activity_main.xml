<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/beigeBackground"
	tools:context=".MainActivity">

	<LinearLayout
		android:id="@+id/topBar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:padding="16dp"
		android:gravity="center_vertical"
		android:background="@android:color/transparent">

		<TextView
			android:id="@+id/textTopConsumed"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:textColor="@color/onBeige"
			android:textStyle="bold"
			android:textSize="18sp"
			android:text="ðŸ’§ 0 ml" />

		<TextView
			android:id="@+id/textTopStreak"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/onBeige"
			android:textStyle="bold"
			android:textSize="18sp"
			android:text="ðŸ”¥ 0" />

		<TextView
			android:id="@+id/textTopGoal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="12dp"
			android:textColor="@color/onBeige"
			android:textStyle="bold"
			android:textSize="18sp"
			android:text="ðŸŽ¯ 2000 ml" />
	</LinearLayout>

	<FrameLayout
		android:id="@+id/contentContainer"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginBottom="72dp"
		android:layout_marginTop="8dp">

		<LinearLayout
			android:id="@+id/homeContainer"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="top|center_horizontal"
			android:orientation="vertical"
			android:padding="8dp">

			<ImageView
				android:id="@+id/imagePlant"
				android:layout_width="match_parent"
				android:layout_height="300dp"
				android:layout_marginTop="8dp"
				android:layout_marginBottom="8dp"
				android:contentDescription="@string/plant_content_desc"
				android:scaleType="fitCenter"
				android:src="@drawable/plant_seedling"
				android:adjustViewBounds="true" />
		</LinearLayout>

		<LinearLayout
			android:id="@+id/historyContainer"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center"
			android:orientation="vertical"
			android:visibility="gone">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/onBeige"
				android:textSize="18sp"
				android:text="Verlauf kommt bald"/>
		</LinearLayout>

		<LinearLayout
			android:id="@+id/scoreboardContainer"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center"
			android:orientation="vertical"
			android:visibility="gone">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/onBeige"
				android:textSize="18sp"
				android:text="Scoreboard kommt bald"/>
		</LinearLayout>

		<LinearLayout
			android:id="@+id/settingsContainer"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center"
			android:orientation="vertical"
			android:visibility="gone">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/onBeige"
				android:textSize="18sp"
				android:text="Einstellungen kommen bald"/>
		</LinearLayout>

	</FrameLayout>

	<com.google.android.material.floatingactionbutton.FloatingActionButton
		android:id="@+id/fabBucket"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal|bottom"
		android:layout_marginBottom="72dp"
		app:backgroundTint="@color/onBeige"
		app:tint="@color/beigeBackground"
		app:srcCompat="@drawable/ic_bucket" />

	<com.google.android.material.bottomnavigation.BottomNavigationView
		android:id="@+id/bottomNav"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom"
		app:menu="@menu/menu_bottom_nav"
		app:itemIconTint="@color/onBeige"
		app:itemTextColor="@color/onBeige"
		android:background="@color/beigeBackground" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>